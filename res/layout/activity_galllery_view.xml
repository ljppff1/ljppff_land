<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GallleryViewActivity" >
<RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/title_bar"
            android:padding="@dimen/title_padding" >

            <TextView
                android:id="@+id/tv_hotdetail_gallerytitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="平面圖"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/imageView_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_bar_logo"
                android:onClick="btn_home" />

            <ImageButton
                android:id="@+id/imageView_return"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_bar_return"
                android:onClick="btn_back" />
        </RelativeLayout>
    </RelativeLayout>

<com.compass.hk.widgets.MyScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/relativeLayout1" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/relativeLayout1" >
        <android.support.v4.view.ViewPager
                android:id="@+id/pager1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@null" >
            </android.support.v4.view.ViewPager>
            <RadioGroup
                    android:id="@+id/radioGroup_hot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="360dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/gallery_radio_1"
                       style="@style/myradiobutton_galley"
                       android:checked="true"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_2"
                          style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_3"
                        style="@style/myradiobutton_galley"
                        />
                      <RadioButton
                        android:id="@+id/gallery_radio_4"
                       style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_5"
                          style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_6"
                        style="@style/myradiobutton_galley"
                        />
                      <RadioButton
                        android:id="@+id/gallery_radio_7"
                       style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_8"
                          style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_9"
                        style="@style/myradiobutton_galley"
                        />
                      <RadioButton
                        android:id="@+id/gallery_radio_10"
                       style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_11"
                          style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_12"
                        style="@style/myradiobutton_galley"
                        />
                      <RadioButton
                        android:id="@+id/gallery_radio_13"
                       style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_14"
                          style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_15"
                        style="@style/myradiobutton_galley"
                        />
                      <RadioButton
                        android:id="@+id/gallery_radio_16"
                       style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_17"
                          style="@style/myradiobutton_galley"
                        />

                    <RadioButton
                        android:id="@+id/gallery_radio_18"
                        style="@style/myradiobutton_galley"  
                        />
                      <RadioButton
                        android:id="@+id/gallery_radio_19"
                        style="@style/myradiobutton_galley"  
                        />
                        <RadioButton
                        android:id="@+id/gallery_radio_20"
                        style="@style/myradiobutton_galley"  
                        />
                    
                    
                </RadioGroup>

        <TextView
            android:id="@+id/tv_gallery_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pager1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="---"
            android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
</com.compass.hk.widgets.MyScrollView>
</RelativeLayout>
