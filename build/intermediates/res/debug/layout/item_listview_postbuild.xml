<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp" >
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="5dp" >

                 <Button
                     android:id="@+id/button_llistview_postbuild_selectpic"
                     android:layout_width="wrap_content"
                     android:layout_height="40dp"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentTop="true"
                     android:text="選擇文件" />

                 <TextView
                     android:id="@+id/tv_postbuild_picth"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBaseline="@+id/button_llistview_postbuild_selectpic"
                     android:layout_alignBottom="@+id/button_llistview_postbuild_selectpic"
                     android:layout_toRightOf="@+id/button_llistview_postbuild_selectpic"
                     android:text="未选择文件"
                     android:layout_marginLeft="5dp"
                     android:textAppearance="?android:attr/textAppearanceMedium" />

             </RelativeLayout>

                 <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="圖片說明:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />


                    <EditText
                        android:id="@+id/et_postbuilder_pic"
                        style="@style/edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textView2"
                        android:inputType="number"
                        android:ems="10" >

                    </EditText>

                </RelativeLayout>

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingLeft="5dp"
                     >

                     <Button
                         android:id="@+id/button_llistview_postbuild_deletepic"
                         android:layout_width="wrap_content"
                         android:layout_height="40dp"
                         android:layout_alignParentTop="true"
                         android:text="刪除" />

                 </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/liujun/Documents/workspace/1/compass_12_19/res/layout/item_listview_postbuild.xml -->