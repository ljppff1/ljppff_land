                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="3dp" >

                                <ImageView
                                    android:id="@+id/ImageView02"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/icon_arrow2" />

                                <TextView
                                    android:id="@+id/tv_rela_hot2_new1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/ImageView02"
                                    android:singleLine="true"
                                    android:text="--" />
                            </RelativeLayout>

                            <RelativeLayout
                                  android:id="@+id/rela_hot2_new2"
                                    android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="3dp" >

                                <ImageView
                                    android:id="@+id/ImageView01"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/icon_arrow2" />

                                <TextView
                                    android:id="@+id/tv_rela_hot2_new2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="5dp"
                                     android:singleLine="true"
                                    android:layout_toRightOf="@+id/ImageView01"
                                    android:text="--" />
                            </RelativeLayout>

                            <RelativeLayout
                                  android:id="@+id/rela_hot2_new3"
                                    android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="3dp" >

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/icon_arrow2" />

                                <TextView
                                    android:id="@+id/tv_rela_hot2_new3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="5dp"
                                     android:singleLine="true"
                                    android:layout_toRightOf="@+id/imageView2"
                                    android:text="--" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_greyline" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager_hot_pic"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:background="@null" >
                </android.support.v4.view.ViewPager>

                <RadioGroup
                    android:id="@+id/radioGroup_hot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="320dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/hot2_radio_1"
