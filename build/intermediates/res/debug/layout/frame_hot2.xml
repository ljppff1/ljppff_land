                        />
                      <RadioButton
                        android:id="@+id/hot2_radio_13"
                       style="@style/myradiobutton"
                        />

                    <RadioButton
                        android:id="@+id/hot2_radio_14"
                          style="@style/myradiobutton"
                        />

                    <RadioButton
                        android:id="@+id/hot2_radio_15"
                        style="@style/myradiobutton"
                        />
                      <RadioButton
                        android:id="@+id/hot2_radio_16"
                       style="@style/myradiobutton"
                        />

                    <RadioButton
                        android:id="@+id/hot2_radio_17"
                          style="@style/myradiobutton"
                        />

                    <RadioButton
                        android:id="@+id/hot2_radio_18"
                        style="@style/myradiobutton"  
                        />
                      <RadioButton
                        android:id="@+id/hot2_radio_19"
                        style="@style/myradiobutton"  
                        />
                        <RadioButton
                        android:id="@+id/hot2_radio_20"
                        style="@style/myradiobutton"  
                        />
                    
                    
