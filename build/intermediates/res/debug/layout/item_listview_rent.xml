<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/iv_listview_rent_pic"
            android:layout_width="130dp"
         android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:background="@drawable/ic_empty" />

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:id="@+id/mRL_listview_rent_2"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_listview_rent_pic" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:id="@+id/tv_listview_rent_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/title_bar"
                        android:text="冰河世紀B座" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/tv_listview_rent_streetname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="深圳南山區世界之窗" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/tv_listview_rent_areagross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="建築面積:65尺" />

                    <TextView
                        android:id="@+id/tv_listview_rent_areanet"
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_listview_rent_areagross"
                        android:text="實用面積:65尺" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:padding="1dp"
                    >

                    <TextView
                        android:id="@+id/tv_listview_rent_saleprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="售：3200萬" />

                    <TextView
                        android:id="@+id/tv_listview_rent_rentprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_listview_rent_saleprice"
                        android:layout_marginLeft="24dp"
                        android:layout_toRightOf="@+id/tv_listview_rent_saleprice"
                        android:text="租：3200萬" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/liujun/Documents/workspace/1/compass_12_19/res/layout/item_listview_rent.xml -->